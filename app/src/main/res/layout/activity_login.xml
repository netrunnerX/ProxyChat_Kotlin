<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context="com.scastilloforte.proxychat_kotlin.activities.LoginActivity"
android:background="#000">

<LinearLayout
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="8dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cartel"
        android:layout_gravity="center_horizontal"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Usuario"
        android:textColor="@android:color/holo_green_light"
        android:textColorHint="@android:color/holo_orange_dark"
        app:backgroundTint="@android:color/holo_green_light"
        android:drawableLeft="@drawable/ic_action_user"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="ContraseÃ±a"
        android:textColor="@android:color/holo_green_light"
        android:textColorHint="@android:color/holo_orange_dark"
        app:backgroundTint="@android:color/holo_green_light"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_action_key"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="1">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btLogin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:layout_gravity="center"
            app:backgroundTint="#3A3A3A"
            android:textColor="@android:color/holo_orange_dark" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btRegister"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="registrar"
            android:layout_gravity="center"
            app:backgroundTint="#3A3A3A"
            android:textColor="@android:color/holo_orange_dark" />
    </LinearLayout>
</LinearLayout>

</RelativeLayout>
