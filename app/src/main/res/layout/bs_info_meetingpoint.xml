<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.scastilloforte.proxychat_kotlin.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreMeetingPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="28dp"
            android:textColor="@android:color/holo_green_light"
            android:text="Punto de encuentro"/>

        <TextView
            android:id="@+id/tvDescMeetingPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@android:color/holo_green_light"
            android:text="DescripciÃ³n"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/botonUnirseMeetingPoint"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:backgroundTint="#3A3A3A"
            android:text="Unirse"
            android:textColor="@android:color/holo_orange_dark" />

    </LinearLayout>

</RelativeLayout>
